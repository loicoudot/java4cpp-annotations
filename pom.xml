<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>
	<groupId>com.github.loicoudot.java4cpp</groupId>
	<artifactId>java4cpp-annotations</artifactId>
	<packaging>jar</packaging>
	<name>java4cpp-annotations</name>
	<version>1.0.0-SNAPSHOT</version>
	<description>Annotations classes for java4cpp project</description>
	<url>https://github.com/loicoudot/java4cpp-annotations</url>
	<licenses>
		<license>
			<name>Gnu General Puplic License, Version 2.0</name>
			<url>https://github.com/loicoudot/java4cpp-annotations/blob/master/LICENSE</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<url>https://github.com/loicoudot/java4cpp-annotations</url>
		<connection>scm:git:https://github.com/loicoudot/java4cpp-annotations.git</connection>
		<developerConnection>scm:git:https://github.com/loicoudot/java4cpp-annotations.git</developerConnection>
	</scm>
	<developers>
		<developer>
			<id>loicoudot</id>
			<name>Loic Oudot</name>
			<email>loic.oudot@gmail.com</email>
		</developer>
	</developers>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.7</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<id>sign-artifacts</id>
						<phase>deploy</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<issueManagement>
		<url>https://github.com/loicoudot/java4cpp-annotations/issues</url>
		<system>GitHub</system>
	</issueManagement>
</project>